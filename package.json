{
  "name": "@masatomakino/threejs-spherical-controls",
  "version": "0.4.7",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/threejs-spherical-controls.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "keywords": [
    "threejs"
  ],
  "dependencies": {
    "@masatomakino/tween.js-ticker": "^0.2.2"
  },
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.5.3",
    "@masatomakino/gulptask-dev-server": "^0.4.2",
    "@tweenjs/tween.js": "18.6.4",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.11",
    "@types/three": "^0.146.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lil-gui": "^0.17.0",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3",
    "three": "^0.147.0",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.21",
    "typescript": "4.9.3"
  },
  "peerDependencies": {
    "@tweenjs/tween.js": ">=18.6.4 <19.0.0",
    "three": ">=0.126.0 <1.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "coverage": "jest --coverage",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo",
    "demo": "npx @masatomakino/gulptask-demo-page --body '<canvas id=\"webgl-canvas\" width=\"1920\" height=\"1080\"></canvas>'",
    "buildTS": "npx tsc --project tsconfig.json & npx tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "npx @masatomakino/gulptask-dev-server -b ./docs/demo",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "npx tsc -W --incremental --project tsconfig.json & npx tsc -W --incremental --project tsconfig.esm.json"
  },
  "description": "Spherical camera controller for Three.js",
  "bugs": {
    "url": "https://github.com/MasatoMakino/threejs-spherical-controls/issues"
  },
  "homepage": "https://github.com/MasatoMakino/threejs-spherical-controls#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  }
}
