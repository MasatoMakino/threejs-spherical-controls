{
  "name": "@masatomakino/threejs-spherical-controls",
  "version": "0.6.0",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/threejs-spherical-controls.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "keywords": [
    "threejs"
  ],
  "peerDependencies": {
    "@masatomakino/tween.js-ticker": "^0.5.0",
    "three": ">=0.126.0 <1.0.0"
  },
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.7.0",
    "@types/jest": "^29.5.2",
    "@types/three": "^0.155.0",
    "browser-sync": "^2.29.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lil-gui": "^0.18.2",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.1",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.25.0",
    "typescript": "5.1.6"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "coverage": "jest --coverage",
    "preversion": "git checkout main && git pull && npm ci && npm run test && npm run build",
    "postversion": "git add package.json package-lock.json && git checkout -b version/$(git describe --tags --abbrev=0)",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run typedocs & npm run demo",
    "demo": "npm run buildTS && npx @masatomakino/gulptask-demo-page --body '<canvas id=\"webgl-canvas\" width=\"1920\" height=\"1080\"></canvas>'",
    "buildTS": "tsc --project tsconfig.json & tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "browser-sync ./docs/demo -w",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental --project tsconfig.json & tsc -W --incremental --project tsconfig.esm.json"
  },
  "description": "Spherical camera controller for Three.js",
  "bugs": {
    "url": "https://github.com/MasatoMakino/threejs-spherical-controls/issues"
  },
  "homepage": "https://github.com/MasatoMakino/threejs-spherical-controls#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  }
}
