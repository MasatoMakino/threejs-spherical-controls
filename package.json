{
  "name": "threejs-spherical-controls",
  "version": "0.1.4",
  "main": "./bin/index.js",
  "types": "./bin/index.d.ts",
  "repository": "https://MasatoMakino@github.com/MasatoMakino/threejs-spherical-controls.git",
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "keywords": [
    "threejs"
  ],
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@types/jest": "^24.0.0",
    "@types/three": "^0.93.10",
    "@types/tweenjs": "^1.0.0",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.26.3",
    "husky": "^1.2.0",
    "jest": "^24.1.0",
    "prettier": "^1.14.3",
    "replace-in-file": "^3.4.2",
    "three": "^0.101.1",
    "ts-jest": "^23.10.4",
    "tweenjs": "^1.0.2",
    "typedoc": "^0.14.2",
    "typescript": "^3.1.3",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "test": "jest --coverage",
    "build": "npm run prettier:src && tsc && npm run babel && npm run doc",
    "prettier:src": "prettier --write './!(bin)/**/*.{js,ts,json}' ",
    "babel": "webpack --mode development --module-bind js=babel-loader ./docs/demo/main.js --output ./docs/demo/bundle.js",
    "watch:babel": "npm run babel -- -w",
    "watch:server": "node task/browsersync.js development",
    "server": "node task/browsersync.js production",
    "doc": "npm run doc:generate && npm run doc:replaceNode && npm run doc:card",
    "doc:generate": "typedoc --tsconfig tsdocconfig.json src",
    "doc:replaceNode": "node ./task/replaceAPI.js",
    "doc:card": "repoimg -n MasatoMakino/threejs-spherical-controls -o ./docs/card.png"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:src"
    }
  }
}
